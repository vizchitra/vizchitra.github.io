{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"tabWidth": 2,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"proseWrap": "preserve",
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "content/**/*.md",
			"options": {
				"parser": "svelte",
				"embeddedLanguageFormatting": "auto"
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"embeddedLanguageFormatting": "auto"
			}
		},
		{
			"files": "*.svx",
			"options": {
				"parser": "svelte",
				"embeddedLanguageFormatting": "auto"
			}
		}
	],
	"svelteSortOrder": "options-scripts-markup-styles",
	"svelteStrictMode": false,
	"svelteIndentScriptAndStyle": true,
	"svelteAllowShorthand": true
}
