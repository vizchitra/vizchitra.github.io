{
	"extends": "./.svelte-kit/tsconfig.json",

	"compilerOptions": {
		/* Incremental JS â†’ TS support */
		"allowJs": true,
		"checkJs": false,

		/* Vite + SvelteKit resolution */
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,

		/* Intentional looseness (can tighten later) */
		"strict": false,
		"noImplicitAny": false,
		"forceConsistentCasingInFileNames": true,

		/* Build & DX */
		"skipLibCheck": true,
		"sourceMap": true,

		/* Required for Vite + Svelte */
		// "types": ["svelte", "vite/client"],

		/* Custom global typings (md, svx, etc.) */
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},

	"include": ["src/**/*", "src/types/global.d.ts"]
}
